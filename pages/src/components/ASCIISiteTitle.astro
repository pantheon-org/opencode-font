---
import { blockyTextToSVG } from '../utils/alphabet';

// Generate blocky pixel-art logo using the alphabet module
// Note: Using 'light' theme with adjusted blockSize and charSpacing
const logoSVG = blockyTextToSVG('OPENCODE', {
	theme: 'light',
	blockSize: 6,
	charSpacing: 1, // In block units (1 block = 6px spacing)
});
---

<a href="/opencode-font/" class="site-title">
	<div set:html={logoSVG} class="logo-container" />
	<span class="sr-only">OpenCode Font</span>
</a>

<style>
	.site-title {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: inherit;
	}

	.logo-container :global(svg) {
		width: auto;
		height: 2.5rem;
	}

	@media (min-width: 50rem) {
		.logo-container :global(svg) {
			height: 2.625rem;
		}
	}
</style>
