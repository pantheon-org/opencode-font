{
  "name": "opencode-font-docs",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "copy-fonts": "mkdir -p public/fonts && cp ../fonts/*.{woff,woff2,ttf} public/fonts/ 2>/dev/null || true",
    "transform": "node transform-docs.js",
    "dev": "bun run copy-fonts && bun run transform && astro dev",
    "build": "bun run copy-fonts && bun run transform && astro build",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/starlight": "^0.36.0",
    "astro": "^5.15.0",
    "astro-expressive-code": "^0.38.0",
    "mermaid": "^11.12.1",
    "playwright": "^1.56.1",
    "rehype-mermaid": "^3.0.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
