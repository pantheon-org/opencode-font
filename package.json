{
  "name": "@pantheon-ai/opencode-font",
  "version": "0.0.1",
  "description": "OpenCode-style font package with text-to-SVG conversion",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "fonts/"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun dev",
    "start": "bun run src/index.ts",
    "build": "tsc -p tsconfig.json",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,css,scss,html}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,md,css,scss,html}'",
    "pack": "npm pack",
    "generate:fonts": "bun run scripts/generate-fonts.ts",
    "validate:fonts": "bash scripts/validate-fonts.sh"
  },
  "keywords": [
    "font",
    "svg",
    "text-to-svg",
    "opencode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/svg2ttf": "^5.0.3",
    "@types/ttf2woff": "^2.0.4",
    "@types/ttf2woff2": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "bun-types": "^1.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsdoc": "^39.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^29.0.0",
    "lefthook": "^2.0.4",
    "prettier": "^3.6.2",
    "svg2ttf": "^6.0.3",
    "svgicons2svgfont": "^15.0.1",
    "ttf2woff": "^3.0.0",
    "ttf2woff2": "^8.0.0"
  }
}
