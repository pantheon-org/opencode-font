{
  "name": "@pantheon-ai/opencode-font",
  "version": "0.0.1",
  "description": "OpenCode-style font package with text-to-SVG conversion",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "fonts/"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun dev",
    "start": "bun run src/index.ts",
    "build": "tsc -p tsconfig.json",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report",
    "test:e2e:coverage": "playwright test coverage-example.spec.ts",
    "test:e2e:coverage:report": "echo 'Coverage reports saved to coverage/e2e/' && ls -lh coverage/e2e/",
    "test:e2e:visual": "playwright test visual-regression.spec.ts",
    "test:e2e:update-screenshots": "playwright test --update-snapshots",
    "playwright:install": "playwright install --with-deps",
    "check:docs": "bun run scripts/check-docs.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,css,scss,html}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,md,css,scss,html}'",
    "clean": "rm -rf dist/ .bun-cache/ coverage/",
    "pack": "npm pack",
    "check:repo-config": "node .github/scripts/check-repo-config.cjs",
    "generate:fonts": "bun run scripts/generate-fonts.ts",
    "validate:fonts": "bun run scripts/validate-fonts.ts",
    "validate:docs-links": "bun run scripts/validate-docs-links.ts",
    "fix:docs-links": "bun run scripts/fix-doc-links.ts",
    "fix:docs-links:dry-run": "bun run scripts/fix-doc-links.ts --dry-run",
    "pages:transform": "cd pages && node transform-docs.js",
    "pages:dev": "cd pages && bun run dev",
    "pages:build": "cd pages && bun run build",
    "pages:preview": "cd pages && bun run preview",
    "verify:package": "npm pack --dry-run",
    "prepublishOnly": "bun run build && bun test && bun run verify:package"
  },
  "keywords": [
    "font",
    "svg",
    "text-to-svg",
    "opencode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^24.10.1",
    "@types/svg2ttf": "^5.0.3",
    "@types/ttf2woff": "^2.0.4",
    "@types/ttf2woff2": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "axe-core": "^4.11.0",
    "bun-types": "^1.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsdoc": "^61.4.0",
    "eslint-plugin-prefer-arrow": "^1.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^29.0.0",
    "lefthook": "^2.0.4",
    "prettier": "^3.6.2",
    "svg2ttf": "^6.0.3",
    "svgicons2svgfont": "^15.0.1",
    "ttf2woff": "^3.0.0",
    "ttf2woff2": "^8.0.0"
  }
}
